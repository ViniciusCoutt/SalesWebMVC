@model SalesWebMVC.Models.Department

@{
    ViewData["Title"] = "Criar";
    ViewData["Subtitle"] = "Departamento";
    ViewData["SaveBtn"] = "Salvar";
    ViewData["BackBtn"] = "Voltar";
}

<h1>@ViewData["Title"]</h1>

<h4>@ViewData["Subtitle"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@ViewData["SaveBtn"]" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">@ViewData["BackBtn"] </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
