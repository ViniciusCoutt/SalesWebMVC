@model SalesWebMVC.Models.Department

@{
    ViewData["Title"] = "Detalhe";
    ViewData["EditBtn"] = "Editar";
    ViewData["BackBtn"] = "Voltar";
    ViewData["Subtitle"] = "Departamento";


}

<h1>@ViewData["Title"]</h1>
<h4>@ViewData["Subtitle"]</h4>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-dark">@ViewData["EditBtn"]</a>
    <a asp-action="Index" class="btn btn-info">@ViewData["BackBtn"]</a>
</div>
