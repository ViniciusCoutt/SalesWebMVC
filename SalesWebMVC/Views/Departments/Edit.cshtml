@model SalesWebMVC.Models.Department

@{
    ViewData["Title"] = "Editar";
    ViewData["SaveBtn"] = "Salvar";
    ViewData["BackBtn"] = "Voltar";
    ViewData["Subtitle"] = "Departamentos";

}

<h1>@ViewData["Title"]</h1>

<h4>@ViewData["Subtitle"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@ViewData["SaveBtn"]" class="btn btn-dark" />
                <a asp-action="Index" class="btn btn-info">@ViewData["BackBtn"]</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
