@{
    ViewData["Title"] = "Vendas";
    ViewData["SimpleSearch"] = "Pesquisa simples";
    ViewData["GroupSearch"] = "Pesquisa agrupada";
    ViewData["MinDateLabel"] = "De";
    ViewData["MaxDateLabel"] = "Até";
    ViewData["SubmitBtn"] = "Pesquisar";

}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="SimpleSearch">
            <fieldset>
                <legend>@ViewData["SimpleSearch"]</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">@ViewData["MinDateLabel"]</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">@ViewData["MaxDateLabel"]</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">@ViewData["SubmitBtn"]</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="GroupingSearch">
            <fieldset>
                <legend>@ViewData["GroupSearch"]</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">@ViewData["MinDateLabel"]</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">@ViewData["MaxDateLabel"]</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">@ViewData["SubmitBtn"]</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>